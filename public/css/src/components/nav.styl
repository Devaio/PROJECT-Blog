.margin-auto
	margin auto

.nav-link
	font-weight: bold
	line-height:24px
	height:24px
	min-height 24px
	transition transform 0.4s ease

	&:hover
		background:none!important
		transform:scale(1.35)

.nav-link-div
	border-right 2px solid black
	
.nav-tool
	@media $screen-md
		margin-top 10px;